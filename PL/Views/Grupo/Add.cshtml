@model ML.GrupoUsuario
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Nuevo Grupo</h2>

    <div class="row">
        <div class="col-md-12">
            <h5>Asigna los integrantes y el nombre de nuevo grupo </h5>
            <hr />
        </div>
    </div>
</div>

@using (Html.BeginForm("Add", "Grupo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group hidden">
        <div class="col-md-3">
            @Html.TextBoxFor(model => model.Usuario.IdUsuario, new { @class = "form-control hidden", @readonly = true })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.Label("", "Nombre del Grupo", new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Grupo.Nombre, new { @class = "form-control" })
        </div>
    </div>

    <br />

    <div class="row" style="padding-top:30px">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <th class="text-center">
                        Selecciona
                    </th>
                    <th class="text-center " scope="col">
                        Usuario
                    </th>
                    <th class="text-center " scope="col">
                        Email
                    </th>
                    <th class="text-center " scope="col">
                        User Name
                    </th>
                    <th class="text-center " scope="col">
                        Estado
                    </th>
                    <th class="text-center " scope="col">
                        Estatus
                    </th>
                </tr>
                @foreach (ML.Usuario usuario in Model.Usuario.Usuarios)
                {
            <tr>
                <td class="text-center">
                    <input type="checkbox" value="@usuario.IdUsuario" name="Usuario.Usuarios">
                </td>
                <td class="text-left">
                    @usuario.NombreCompleto
                </td>
                <td class="text-left">
                    @usuario.Email
                </td>
                <td class="text-center">
                    @usuario.UserName
                </td>
                <td class="text-center">
                    @usuario.Estado.Nombre
                </td>
                <td class="text-center">
                    @usuario.Estatus.Nombre
                </td>
            </tr>
                }
            </table>
            <div class="form-group col-md-12">
                <div class="text-right">
                    <input class="btn btn-success" type="submit" value="Crear Grupo" />
                    <a class="btn btn-danger" href="@Url.Action("GetAll", "Grupo", new { IdAlumno = Model.Usuario.IdUsuario })"> Regresar</a>
                </div>
            </div>
        </div>
    </div>
}